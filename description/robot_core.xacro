<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>  

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>  

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>  

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material> 
    
    <!-- BASE LINK -->
    <link name="base_link"></link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0 0 0"/>
    </joint>

    <!--BASE FOOTPRINT LINK-->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>

    <!-- CHASSIS LINK -->

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.23 0.27 0.15"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.23 0.27 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="3" x="0.23" y="0.27" z="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL FRONT LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.12 0.15 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.07"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.07" length="0.07"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.25" radius="0.07" length="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <!-- LEFT WHEEL BACK LINK -->

    <joint name="left_back_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_back"/>
        <origin xyz="-0.12 0.15 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="left_wheel_back">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.07"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.07" length="0.07"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.25" radius="0.07" length="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL FRONT LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.12 -0.15 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.07"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.07" length="0.07"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.25" radius="0.07" length="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

     <!-- RIGHT WHEEL BACK LINK -->

     <joint name="right_wheel_back_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_back"/>
        <origin xyz="-0.12 -0.15 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel_back">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.07"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.07" length="0.07"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.25" radius="0.07" length="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

</robot>